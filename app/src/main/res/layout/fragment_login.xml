<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="vertical"
            android:padding="16dp">


            <com.ssoft.common.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="PHS Apps"
                android:textColor="@color/white"
                android:textSize="34sp"
                app:font_name="kanitBold" />

            <com.ssoft.common.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="แอปพลิเคชันสนับสนุน"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.ssoft.common.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="การช่วยเหลือด้านสาธารณสุขสำหรับประชาชนผู้สูงวัย"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <ImageView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_main"/>



        </FrameLayout>




        <com.ssoft.common.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="ชื่อผู้ใช้"/>
            <com.ssoft.common.widget.CustomEditText
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/black"
                android:background="@drawable/input_bg"
                android:textSize="14sp"
                android:layout_gravity="center"/>

        <com.ssoft.common.widget.CustomTextView
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="รหัสผ่าน"/>
        <com.ssoft.common.widget.CustomEditText
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:background="@drawable/input_bg"
            android:textSize="14sp"
            android:layout_gravity="center"/>

        <com.ssoft.common.widget.CustomButton
            android:paddingEnd="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/loginAction"
            android:paddingStart="52dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="46dp"
            android:background="@drawable/btn_primary"
            android:text="เข้าสู่ระบบ"/>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>