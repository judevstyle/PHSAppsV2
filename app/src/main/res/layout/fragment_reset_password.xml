<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <FrameLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="260dp">


            <ImageView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_main"/>



        </FrameLayout>


        <com.ssoft.common.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="ตั้งค่าผู้ใช้งาน"/>


        <com.ssoft.common.widget.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="รหัสผ่าน"/>
            <com.ssoft.common.widget.CustomEditText
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:id="@+id/passET"
                android:inputType="text"
                android:hint="@string/hint_input"
                android:maxLines="1"
                android:textColor="@color/black"
                android:background="@drawable/input_bg"
                android:textSize="14sp"
                android:layout_gravity="center"/>

        <com.ssoft.common.widget.CustomTextView
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="ยืนยันรหัสผ่าน"/>

        <com.ssoft.common.widget.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_gravity="center"
            android:background="@drawable/input_bg"
            android:inputType="text"
            android:paddingStart="12dp"
            android:id="@+id/passCF"
            android:paddingEnd="12dp"
            android:hint="@string/hint_input"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <LinearLayout
            android:layout_marginTop="16dp"

            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ssoft.common.widget.CustomButton
                android:layout_gravity="center"
                android:id="@+id/cancelAction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:layout_height="46dp"
                android:background="@drawable/btn_primary"
                android:text="ยกเลิก"/>

            <com.ssoft.common.widget.CustomButton
                android:layout_gravity="center"
                android:id="@+id/saveAction"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="14dp"
                android:textColor="@color/white"
                android:layout_height="46dp"
                android:background="@drawable/btn_primary"
                android:text="บันทึก"/>


        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>