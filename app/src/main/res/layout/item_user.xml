<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <com.ssoft.common.widget.CustomTextView
            android:layout_width="0dp"
            android:id="@+id/nameTV"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="XXXXX"/>
        <com.ssoft.common.widget.CustomTextView
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/ageTV"
            android:textSize="14sp"

            android:gravity="center"
            android:text="-"/>
        <com.ssoft.common.widget.SingleLineTextView
            android:layout_width="0dp"
            android:padding="4dp"
            android:textSize="12sp"
            android:id="@+id/addAction"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"
            android:backgroundTint="#4CAF50"
            android:background="@drawable/btn_manage"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="เพิ่มข้อมูลสุขภาพ"/>
        <com.ssoft.common.widget.CustomTextView
            android:layout_width="0dp"
            android:id="@+id/historyAction"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:backgroundTint="#673AB7"
            android:background="@drawable/btn_manage"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="ประวัติสุขภาพ"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>